<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:background="?android:attr/selectableItemBackground"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="4dp"
    android:layout_width="match_parent"
    android:layout_height="360dp">

        <ImageView
            android:id="@+id/place_image"
            android:layout_weight="4"
            tools:src="@mipmap/ic_launcher_round"
            android:maxWidth="158dp"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <TextView
            android:paddingBottom="10dp"
            android:textStyle="bold"
            android:id="@+id/place_name"
            android:textSize="16sp"
            tools:text="World of Coca-Cola"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:id="@+id/place_description"
            android:textColor="@color/lightBackgroundText"
            tools:text="Here we shall place all the neccesary text for the descritption of the place  "
            android:layout_width="match_parent"
            android:layout_height="0dp" />
            <RelativeLayout
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
            <TextView
                android:textStyle="bold"
                android:textSize="14sp"
                android:text="Usual hours"
                android:id="@+id/usual_hours"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="4dp"
                tools:text="8Am-9PM"
                android:id="@+id/set_hour_textview"
                android:layout_below="@+id/usual_hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginRight="4dp"
                    android:layout_centerInParent="true"
                    android:text="Directions"
                    android:layout_toLeftOf="@+id/directions_imageview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            <ImageView
                android:layout_centerInParent="true"
                android:id="@+id/directions_imageview"
                android:src="@drawable/ic_directions_black_36dp"
                android:layout_alignParentRight="true"
                android:layout_width="36dp"
                android:layout_height="36dp" />
                <RatingBar
                    android:layout_centerInParent="true"
                    android:id="@+id/rating_bar"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:rating="4.5"
                    android:stepSize="0.5" />
            </RelativeLayout>


</LinearLayout>